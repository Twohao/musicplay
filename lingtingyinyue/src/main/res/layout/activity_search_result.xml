<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guocheng.lingtingyinyue.activity.SearchResultActivity">

    <RelativeLayout
        android:id="@+id/rl_search_top_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#F0F0F0">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/action_bar_back_normal_light"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="搜索结果"
            android:textSize="16sp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF"
        />

    <TextView
        android:id="@+id/tv_search_result_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已经为你找到800首相关歌曲"
        android:textColor="@color/subblack"
        android:textSize="15sp"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_search_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>
